@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link href="~/lib/jquery-easyui/easyui.css" rel="stylesheet" />
    <link href="~/lib/jquery-easyui/icon.css" rel="stylesheet" />

}

@section Scripts{
    <script src="~/lib/jquery-easyui/jquery.easyui.min.js"></script>
    <script src="~/app/controllers/product/index.js"></script>
    <script>
        var product = new productController();
        product.initialize();
    </script>
}
<div class="page-title">
    <div class="title_left">
        <h3>Product <small>Product Manager</small></h3>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right">
            <div class="input-group">
                <input type="text" class="form-control" id="txtKeyword" placeholder="Search for...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" id="btnSearch">Go!</button>
                </span>
            </div>
        </div>

        <div class="col-md-5 col-xs-12 form-group pull-right">
            <select class="form-control" id="ddlSelectedCategory">
                <option value="">--Select category--</option>
            </select>
        </div>
        <div class="col-md-6 col-sm-12  form-group pull-right">
            <button id="btnCreate" class="btn btn-success">Create</button>
            @*<a class="btn btn-danger" href="~/templates/ProductImportTemplate.xlsx">Template</a>
                <button class="btn btn-primary" id="btn-import" type="button"><i class="fa fa-file-excel-o"></i></button>
                <button class="btn btn-default" id="btn-export" type="button"><i class="fa fa-forward"></i></button>*@
        </div>

    </div>
</div>
<div class="clearfix"></div>

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Product table <small>Product table subtitle</small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="#">Settings 1</a>
                        </li>
                        <li>
                            <a href="#">Settings 2</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Image</th>
                        <th>Created Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody id="tblContent"></tbody>
            </table>
            <!--Pagination-->
            <div class="row">
                <div class="col-sm-6">
                    <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                        <select id="ddlShowPageSize">
                            <option value="10" selected="selected">10</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="50">50</option>
                        </select>
                        <span class="item-per-page">
                            bản ghi/trang.
                        </span>
                        Tổng số bản ghi: <strong id="lblTotalRecords"></strong>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                        <ul id="paginationUL"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="tableTemplate" type="x-tmpl-mustache">
    <tr>
        <th>
            <a class="btn btn-success btn-sm btn-edit" data-id="{{Id}}"><i class="fa fa-pencil"></i></a>
            <a class="btn btn-danger btn-sm btn-delete" data-id="{{Id}}"><i class="fa fa-trash"></i></a>
        </th>
        <th>{{Name}}</th>
        <td>{{CategoryName}}</td>
        <td>{{Price}}</td>
        <td>{{{Image}}}</td>
        <td>{{CreatedDate}}</td>
        <td>{{{Status}}}</td>
    </tr>
</script>

@await Html.PartialAsync("_AddEditModal.cshtml")