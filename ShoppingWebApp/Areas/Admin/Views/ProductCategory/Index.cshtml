@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link href="~/lib/jquery-easyui/easyui.css" rel="stylesheet" />
    <link href="~/lib/jquery-easyui/icon.css" rel="stylesheet" />

}

@section Scripts{
    <script src="~/lib/jquery-easyui/jquery.easyui.min.js"></script>
    <script src="~/app/controllers/productcategory/index.js"></script>
    <script>
        var category = new categoryController();
        category.initialize();
    </script>
}

<div class="page-title">
    <div class="title_left">
        <h3>Product <small>Product Category Manager</small></h3>
    </div>
    <div class="title_right">
        <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right">
            <button class="btn btn-success" id="btnCreate" type="button">Create</button>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Product table <small>Product table subtitle</small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="#">Settings 1</a>
                        </li>
                        <li>
                            <a href="#">Settings 2</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <ul class="easyui-tree" id="categoryTree"></ul>
            <div id="contextMenu" class="easyui-menu" style="width:120px;">
                <div id="btnEdit" data-options="iconCls:'icon-edit'">Sửa</div>
                <div id="btnDelete" data-options="iconCls:'icon-remove'">Xoá</div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_AddEditModal.cshtml")